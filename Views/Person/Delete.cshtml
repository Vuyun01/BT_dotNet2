@model TranBaVuBTH2.Models.Person

@{ViewData["title"] = "Delete";
}
<h3>Bạn có muốn xóa thông tin người dùng</h3>
<div>
    <hr />
    <dl class="col">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PersonName):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PersonName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Height):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Height)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Weight):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Weight)
        </dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="PersonID" />
    <input type="submit" class="btn btn-danger" value="Delete" />
    <a class="btn btn-success" asp-action="Index">Danh sách người dùng</a>
</form>