
@{
  string customerID = Guid.NewGuid().ToString();
}
<h2 style="margin-bottom: 36px">Add a customer</h2>
<form asp-action="Create" method="post">
    <input type="hidden" value="@customerID" name="CustomerID">
    <div class="mb-3">
      <label for="customer_Name">Name:</label>
      <input type="text" class="form-control" id="customer_Name" placeholder="Enter customer name" name="CustomerName">
    </div>
    <div class="mb-3">
      <label for="customer_Address">Address:</label>
      <input type="text" class="form-control" id="customer_Address" placeholder="Enter customer address" name="CustomerAddress">
    </div>
    <div class="mb-3">
      <label for="customer_Phone">Phone:</label>
      <input type="text" class="form-control" id="customer_Phone" placeholder="Enter customer phone" name="CustomerPhone">
    </div>
    <div class="mb-3">
        <button type="submit" class="btn btn-primary">Submit</button>
        <a class="btn btn-success" asp-action="Index">Danh sach khach hang</a>
    </div>
</form>
