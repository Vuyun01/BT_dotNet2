@model TranBaVuBTH2.Models.Student


@{
    ViewData["title"] = "Edit";
}

<h4>Sua thong tin sinh vien</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="StudentID" />
            <div class="form-group">
                <label class="form-label" asp-for="StudentName"></label>
                <input asp-for="StudentName" class="form-control" />
                <span asp-validation-for="StudentName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-success">Danh sach sinh vien</a>
            </div>
        </form>
    </div>
</div>

@section Scrips{
    @{await Html.RenderPartialAsync("_ValidationScripsPartial");};
}


