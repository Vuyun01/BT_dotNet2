@{
  string personID = Guid.NewGuid().ToString();
}
<h2 style="margin-bottom: 36px">Add a person</h2>
<form asp-action="Create" method="post">
    <input type="hidden" value="@personID" name="PersonID">
    <div class="mb-3">
      <label for="person_Name">Name:</label>
      <input type="text" class="form-control" id="person_Name" placeholder="Enter person name" name="PersonName">
    </div>
    <div class="mb-3">
      <label for="person_Height">Height:</label>
      <input type="text" class="form-control" id="person_Height" placeholder="Enter person height" name="Height">
    </div>
    <div class="mb-3">
      <label for="person_Weight">Weight:</label>
      <input type="text" class="form-control" id="person_Weight" placeholder="Enter person weight" name="Weight">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
